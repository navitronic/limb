{
    "name": "navitronic/limb",
    "description": "A really simple static site generator. Less is more, buddy...",
    "type": "library",
    "require-dev": {
        "carthage-software/mago": "^1.0",
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "psr-4": {
            "Limb\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Limb\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/limb"
    ],
    "authors": [
        {
            "name": "Adrian",
            "email": "navitronic@gmail.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "carthage-software/mago": true
        }
    },
    "require": {
        "php": "^8.4",
        "league/commonmark": "^2.5",
        "league/container": "^4.2",
        "symfony/console": "^7.0",
        "symfony/yaml": "^7.0"
    }
}
